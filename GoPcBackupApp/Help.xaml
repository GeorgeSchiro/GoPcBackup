<local:SavedWindow x:Class="GoPcBackup.Help"
        xmlns:local="clr-namespace:GoPcBackup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{DynamicResource SavedWindow}"
        AllowsTransparency="False"
        Background="LightYellow"
        WindowStyle="ThreeDBorderWindow"
        Title="GoPcBackup Help"
        Height="500" Width="650" 
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
    >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ScrollViewer Name="svText" HorizontalScrollBarVisibility="Auto" FocusVisualStyle="{x:Null}" >
            <TextBlock Name="txtHelp" FontFamily="Courier New" FontSize="12" FontWeight="Bold" Margin="20" />
        </ScrollViewer>
    </Grid>
</local:SavedWindow>
